<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_pricing_form" model="ir.ui.view">
            <field name="name">res.partner.pricing.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            <field name="team_id" position="after">
                <field name="credit_limit"/>
            </field>
            <xpath expr="//notebook/page[@name='sales_purchases']" position="before">
                <page name="partner_pricing" string="Pricing">
                    <field name="pricing_ids">
                        <tree editable="bottom" create="false">
                            <field name="partner_id" invisible="1"/>
                            <field name="product_id"/>
                            <field name="price" readonly="1" options="{'no_create': True, 'no_create_edit':True}"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            </field>
    </record>

</odoo>