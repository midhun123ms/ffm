<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.pricing.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header/button[@id='action_confirm']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['sent','approval'])]}</attribute>
            </xpath>
             <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'sale')]}</attribute>
            </xpath>
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': False, 'no_edit': False}</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_form_product_inherit" model="ir.ui.view">
        <field name="name">sale.order.product.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True, 'no_edit': True}</attribute>
            </xpath>
        </field>
    </record>


</odoo>

